<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="LOGAR"
        android:id="@+id/btnEntrar"
        android:layout_below="@+id/edtCampoSenha"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@color/white"
        android:textStyle="bold" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:id="@+id/edtCampoLogin"

        android:gravity="center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme2"
        android:layout_marginTop="29dp"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:id="@+id/edtCampoSenha"

        android:gravity="center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/edtCampoLogin"
        android:layout_alignStart="@+id/edtCampoLogin"
        android:inputType="textPassword"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:id="@+id/textView5"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edtCampoLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:id="@+id/textView6"
        android:textColor="@color/white"
        android:layout_below="@+id/edtCampoLogin"
        android:layout_alignStart="@+id/edtCampoSenha"
        android:layout_marginTop="10dp" />

</RelativeLayout>