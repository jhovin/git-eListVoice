<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/item_list"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="@string/string_item_list"
            android:id="@+id/txt_item_list"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITENS"
            android:id="@+id/textView"
            android:layout_marginLeft="310dp"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/txt_item_list"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_num_item"
            android:id="@+id/txt_num_item"
            android:layout_alignTop="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="5dp" />

    </RelativeLayout>
</LinearLayout>