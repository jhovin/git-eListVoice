<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <EditText
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:id="@+id/edtUserLogin"

        android:gravity="center"
        android:ems="8"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/txtSenFragment"
        android:inputType="textNoSuggestions|textVisiblePassword"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        android:gravity="center"
        android:id="@+id/edtSenha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/txtSenFragment"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/abc_background_cache_hint_selector_material_light" />

    <Button
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:text="CADASTRAR"
        android:id="@+id/btnCadastrar"
        android:layout_below="@+id/edtSenha"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@color/white"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:id="@+id/textView5"
        android:textColor="@color/white"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edtUserLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:id="@+id/txtSenFragment"
        android:textColor="@color/white"
        android:layout_below="@+id/edtUserLogin"
        android:layout_alignStart="@+id/edtSenha" />

</RelativeLayout>